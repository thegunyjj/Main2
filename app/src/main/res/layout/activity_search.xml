<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc360.tool.Activity.ProfileActivity"
    android:orientation="vertical"
    android:background="#f6f6f6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#32a7ee">
        <LinearLayout
            android:paddingRight="24dp"
            android:background="@drawable/layout_selector"
            android:layout_centerVertical="true"
            android:id="@+id/profile_button_back"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="搜索"/>
            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="12dp"
                    android:layout_width="24dp"
                    android:padding="4dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search_book"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="老师擅长课程"
                android:textColor="#484848"
                android:gravity="center_vertical"
                android:textSize="18sp"/></LinearLayout>
            <ImageView
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#eee"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="全部"/>
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="口语会话课程"/>
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="青少年英语课程"/>
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="托福雅思课程"/>
                        </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="商务英语"/>
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="成人单项强化"/>
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="青少年英语单项"/>
                        <CheckBox
                            android:button="@drawable/checkbox_selector"
                            android:id="@+id/searchActivity_cb_option7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#484848"
                            android:text="特色自选课程"/>
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/searchActivity_ll_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginLeft="12dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_search_teacher_type"
                    android:id="@+id/imageView4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textColor="#484848"
                    android:text="老师类型"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_toEndOf="@+id/imageView4" />
                <TextView
                    android:id="@+id/searchActivity_tv_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选择"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:layout_toStartOf="@+id/imageView5" />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_into"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView5" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchActivity_ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginLeft="12dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search_deta"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textColor="#484848"
                    android:text="上课日期"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView" />
                <TextView
                    android:id="@+id/searchActivity_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选择"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:layout_toStartOf="@+id/imageView2" />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_into"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView2" />

                </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchActivity_ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginLeft="12dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search_time"
                    android:id="@+id/imageView1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textColor="#484848"
                    android:text="上课时间"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_toEndOf="@+id/imageView1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选择"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView3"
                    android:layout_toStartOf="@+id/imageView3"
                    android:id="@+id/searchActivity_tv_time" />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_into"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView3" />

            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/searchactivity_bt_search"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="搜索"
                android:background="@drawable/btn_selector"/>
            </RelativeLayout>
    </LinearLayout>


</LinearLayout>
