<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc360.tool.Activity.ProfileActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#32a7ee">
        <LinearLayout
            android:background="@drawable/layout_selector"
            android:layout_centerVertical="true"
            android:id="@+id/reservation_button_back"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text=""/>
            </LinearLayout>
        <LinearLayout
            android:background="@drawable/layout_selector"
            android:layout_centerVertical="true"
            android:id="@+id/reservation_button_checkTeacher"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="查看老师"/>
        </LinearLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:background="@drawable/reservation_profile_backgrund"/>
            <ImageView
                android:layout_marginTop="18dp"
                android:id="@+id/reservation_iv_teacher"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar_default"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/reservation_tv_teacher_name"
                android:layout_margin="2dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="22sp"
                android:text="teacher name"
                android:layout_below="@+id/reservation_iv_teacher"
                android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reservationFormDeta_rl_selector"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#f6f6f6">
        <FrameLayout
            android:id="@+id/reservationFormDeta_fl_btn_1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/reservationFormDeta_fl_btn_2"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/reservationFormDeta_tv_btn_1"
                android:background="@drawable/btn_open_f"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="今天"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/reservationFormDeta_fl_btn_2"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/reservationFormDeta_fl_btn_3"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/reservationFormDeta_tv_btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#32a7ee"
                android:textSize="16sp"
                android:text="明天"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/reservationFormDeta_fl_btn_3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/reservationFormDeta_tv_btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#32a7ee"
                android:textSize="16sp"
                android:text="后天"/>
            </FrameLayout>
        <FrameLayout
            android:id="@+id/reservationFormDeta_fl_btn_4"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/reservationFormDeta_fl_btn_3"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/reservationFormDeta_tv_btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#32a7ee"
                android:textSize="16sp"
                android:text="周三"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/reservationFormDeta_fl_btn_5"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/reservationFormDeta_fl_btn_4"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/reservationFormDeta_tv_btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#32a7ee"
                android:textSize="16sp"
                android:text="周四"/>
        </FrameLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="68dp"
        android:background="#fff">
       <ListView
           android:id="@android:id/list"
           android:divider="@null"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           </ListView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>
        </LinearLayout>



        <Button
            android:id="@+id/reservation_button_ok"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_selector"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:text="确认预约"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
