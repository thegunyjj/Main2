<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc360.tool.Activity.ProfileActivity"
    android:orientation="vertical"
    android:background="#f6f6f6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#32a7ee">
        <LinearLayout
            android:paddingRight="24dp"
            android:background="@drawable/layout_selector"
            android:layout_centerVertical="true"
            android:id="@+id/button_back"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="找回密码"/>
            </LinearLayout>

        <Button
            android:id="@+id/forget_activity_bt_sent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/layout_selector"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="提交"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:singleLine="true"
            android:inputType="phone"
            android:id="@+id/forget_activity_et_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="手机号码(账号)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <EditText
                android:maxLength="10"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/forget_activity_et_code"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="验证码"/>
            <Button
                android:id="@+id/forget_activity_bt_getcode"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:text="获取验证码"/>
            </LinearLayout>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/forget_activity_et_npsw0"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="新密码"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/forget_activity_et_npsw1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="重新输入新密码"/>
    </LinearLayout>

</LinearLayout>
