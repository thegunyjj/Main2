<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/item2_imageview_teacher_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/avatar_default"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingLeft="8dp"
            android:gravity="center">
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"
                android:src="@drawable/ic_avater"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/item2_textview_teacher"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="教师名字"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"
                android:src="@drawable/ic_book"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/item2_textview_textbooks"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="教材"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item2_textview_time"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:padding="8dp"
            android:text="时间"
            android:textSize="13sp"
            android:textColor="#999"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/item2_imageview_praiseState"
            android:layout_margin="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        </RelativeLayout>
</LinearLayout>