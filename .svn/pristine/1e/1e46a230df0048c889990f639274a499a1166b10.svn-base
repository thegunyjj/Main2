<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <ImageView
            android:id="@+id/results_item_imageview_teacher_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_default"
            android:layout_margin="12dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="30dp"
            android:textColor="#484848"
            android:textSize="18sp"
            android:id="@+id/results_item_textview_teacher"
            android:text="教师名字"
            android:layout_alignTop="@+id/results_item_imageview_teacher_pic"
            android:layout_toRightOf="@+id/results_item_imageview_teacher_pic"
            android:layout_toEndOf="@+id/results_item_imageview_teacher_pic" />

        <TextView
            android:id="@+id/results_item_textview_acoin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#989898"
            android:text="包月:12A币 自由:16A币"
            android:layout_below="@+id/results_item_textview_teacher"
            android:layout_alignLeft="@+id/results_item_textview_teacher"
            android:layout_alignStart="@+id/results_item_textview_teacher" />


        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/imageview1"
            android:layout_width="16dp"
            android:padding="2dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/results_item_textview_teacher"
            android:layout_toRightOf="@+id/results_item_textview_teacher"
            android:layout_toEndOf="@+id/results_item_textview_teacher"
            android:src="@drawable/ic_favs"/>

        <TextView
            android:id="@+id/results_item_tv_star"
            android:layout_alignTop="@+id/imageview1"
            android:layout_toRightOf="@+id/imageview1"
            android:layout_toEndOf="@+id/imageview1"
            android:gravity="center_vertical"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:text="5431"
            android:textColor="#989898"
            android:layout_width="wrap_content"/>

        <ImageView
            android:id="@+id/results_item_iv_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@xml/red_triangle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#686868"
            android:id="@+id/results_item_textview_time"
            android:text="时间"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        </RelativeLayout>


</LinearLayout>