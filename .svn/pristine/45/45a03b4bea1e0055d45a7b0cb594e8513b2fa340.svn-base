<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc360.tool.Activity.ProfileActivity"
    android:orientation="vertical"
    android:background="#f6f6f6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#32a7ee">
        <LinearLayout
            android:paddingRight="24dp"
            android:background="@drawable/layout_selector"
            android:layout_centerVertical="true"
            android:id="@+id/button_back"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="搜索老师"/>
            </LinearLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/searchActivity_ll_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@drawable/layout_selector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_marginLeft="12dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_binding"
                        android:id="@+id/imageView4"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textColor="#484848"
                        android:text="老师类型"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView4"
                        android:layout_toEndOf="@+id/imageView4" />
                    <TextView
                        android:id="@+id/searchActivity_tv_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未选择"
                        android:textColor="#686868"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView5"
                        android:layout_toStartOf="@+id/imageView5" />
                    <ImageView
                        android:layout_marginRight="12dp"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_into"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/imageView5" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchActivity_ll_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@drawable/layout_selector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_marginLeft="12dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_times"
                        android:id="@+id/imageView"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textColor="#484848"
                        android:text="绑定时间"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView"
                        android:layout_toEndOf="@+id/imageView" />
                    <TextView
                        android:id="@+id/searchActivity_tv_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未选择"
                        android:textColor="#686868"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:layout_toStartOf="@+id/imageView2" />
                    <ImageView
                        android:layout_marginRight="12dp"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_into"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/imageView2" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchActivity_ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/layout_selector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_marginLeft="12dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_abc"
                        android:id="@+id/imageView1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textColor="#484848"
                        android:text="教师名首字母"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:layout_toEndOf="@+id/imageView1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textColor="#686868"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView3"
                        android:layout_toStartOf="@+id/imageView3"
                        android:id="@+id/searchActivity_tv_name" />
                    <ImageView
                        android:layout_marginRight="12dp"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_into"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/imageView3" />

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/searchactivity_bt_search"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:text="搜索"
                    android:background="@drawable/btn_selector"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
